{
    "name": "samburns/codekata-romannumerals",

    "license": "MIT",

    "require": {
        "php":                  "^7.1",
        "symfony/console":      "^4.1",
        "ultra-lite/container": "^6.2"
    },

    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "phpspec/phpspec": "^5.0",
        "behat/behat":     "^3.5"
    },

    "autoload": {
        "psr-4": {
            "RomanNumeralsKata\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "BehatContexts\\": "tests/behat/features/bootstrap"
        }
    },

    "scripts": {
        "test": [
            "./vendor/bin/behat",
            "./vendor/bin/phpspec run",
            "./vendor/bin/phpunit"
        ]
    }
}
